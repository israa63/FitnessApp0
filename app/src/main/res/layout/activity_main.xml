<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layoutStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#62C3CF"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/text3"
        style="@style/myStyle"
        android:layout_width="207dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="6dp"

        android:backgroundTint="#D1A0A0"
        android:shadowColor="#B81C1C"
        android:text="Fitness App"
        android:textColor="#DA2F2F"
        android:textColorHighlight="#C52E2E"
        android:textColorHint="#BA2E2E"
        android:textSize="34sp" />

    <ImageView
        style="@android:style/Animation"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="71dp"
        android:src="@drawable/ftness" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="64dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="262dp"
        android:text="Name:"
        android:textColor="#673AB7"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="261dp"
        android:layout_marginEnd="28dp"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="94dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="315dp"
        android:text="Password:"
        android:textColor="#673AB7"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editpassword"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="26dp"
        android:inputType="textPassword" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="122dp"
        android:layout_height="69dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="83dp"
        android:entries="@array/Gender"></Spinner>

    <Button
        android:id="@+id/button3"
        style="@style/buttonStyle"
        android:layout_width="122dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="82dp"
        android:onClick="btnonclicksave"
        android:text="Login" />


</RelativeLayout>